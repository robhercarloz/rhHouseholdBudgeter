@model rhHouseholdBudgeter.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <!--START FAVICON---->
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <!---END FAVICON----->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Financial Budgeter RH
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/paper-dashboard.css" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/Content/demo.css" rel="stylesheet" />
</head>

<body class="register-page">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <div class="container">
            <div class="navbar-wrapper">
                <div class="navbar-toggle">
                    <button type="button" class="navbar-toggler">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="#">Welcome to Financial Portal</a>
            </div>            
        </div>
    </nav>
    <!-- End Navbar -->
    <!--BODY-->
    <div class="wrapper wrapper-full-page ">
        <div class="full-page register-page section-image" filter-color="black" style="background-image: url('../../Images/registerLeafBK.jpg')">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5 col-md-5 ml-auto">
                            <div class="info-area info-horizontal mt-5">
                                <div class="icon icon-primary">
                                    <i class="nc-icon nc-bank"></i>
                                </div>
                                <div class="description">
                                    <h5 class="info-title">Create Households</h5>
                                    <p class="description">
                                        Join a houselhold and keep track of where your house's money is going.
                                    </p>
                                </div>
                            </div>
                            <div class="info-area info-horizontal">
                                <div class="icon icon-primary">
                                    <i class="nc-icon nc-money-coins"></i>
                                </div>
                                <div class="description">
                                    <h5 class="info-title">Track Your Expenses</h5>
                                    <p class="description">
                                        Manage where your money is going and keep track of all your expenses, useful charts and reports to help you out.
                                    </p>
                                </div>
                            </div>
                            <div class="info-area info-horizontal">
                                <div class="icon icon-info">
                                    <i class="nc-icon nc-email-85"></i>
                                </div>
                                <div class="description">
                                    <h5 class="info-title">Invite People </h5>
                                    <p class="description">
                                        Invite people to your house and view what they're expenses are and manage how they spend it.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mr-auto">
                            <div class="card card-signup text-center">
                                <div class="card-header ">
                                    <h4 class="card-title">Begin Your Register</h4>
                                </div>
                                <div class="card-body ">
                                    @using (Html.BeginForm("NewRegister", "Account", FormMethod.Post, new { enctype = "Multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="nc-icon nc-single-02"></i>
                                                    </span>
                                                </div>
                                                @*@Html.TextBoxFor(m => m.FName, new { id = "form-control", @placeholder = "First Name", @type = "text" })*@

                                                <input id="FName" name="FName" type="text" class="form-control" placeholder="First Name...">
                                                @Html.ValidationMessageFor(m => m.FName, "", new { @class = "text-danger" })
                                            </div>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="nc-icon nc-circle-10"></i>
                                                        </span>
                                                    </div>
                                                    <input id="LName" name="LName" type="text" class="form-control" placeholder="Last Name...">
                                                    @Html.ValidationMessageFor(m => m.LName, "", new { @class = "text-danger" })
                                                    @*<input type="text" placeholder="Last Name..." class="form-control">*@
                                                </div>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="nc-icon nc-circle-10"></i>
                                                        </span>
                                                    </div>
                                                    <input id="Displayname" name="Displayname" type="text" class="form-control" placeholder="Display Name...">
                                                    @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                                                    @*<input type="text" placeholder="Last Name..." class="form-control">*@
                                                </div>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="nc-icon nc-email-85"></i>
                                                        </span>
                                                    </div>
                                                    <input id="Email" name="Email" type="email" class="form-control" placeholder="Email...">
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                    @*<input type="email" class="form-control" placeholder="Email...">*@
                                                </div>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="nc-icon nc-key-25"></i>
                                                        </span>
                                                    </div>
                                                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Password...">
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                    @*<input type="email" class="form-control" placeholder="Email...">*@
                                                </div>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="nc-icon nc-key-25"></i>
                                                        </span>
                                                    </div>
                                                    <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password...">
                                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                    @*<input type="email" class="form-control" placeholder="Email...">*@
                                                </div>
                                                <!--IMAGE UPLOAD-->                                       
                                                <label>Upload Avatar Image</label>
                                                <input name="AvatarImage" type="file" class="form-control" id="fileupload" />                                    
                                    
                                        @*<div class="card-footer "><a href="#pablo" class="btn btn-info btn-round">Get Started</a</div>*@
                                        <div class="card-footer ">
                                            <button type="submit" class="btn btn-info btn-round">Submit <i class="ti-arrow-right"></i></button>
                                        </div>
                                    }
                                <div class="form-footer text-center mt-2">
                                    <p class="text-muted">
                                        Already an account?
                                        @Html.ActionLink("Log In", "Login", "Account")
                                    </p>
                                </div>
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>            
        </div>
           
    </div>
    <!--END BODY-->
    <!-- Core JS Files   -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
    <script src="~/Scripts/bootstrap-switch.js"></script>
    <!--  Plugin for Sweet Alert -->
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <!-- Forms Validations Plugin -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <!--  Plugin for the Wizard, full documentation here: https://github.com/VinceG/twitter-bootstrap-wizard -->
    <script src="~/Scripts/jquery.bootstrap-wizard.js"></script>
    <!--    Plugin for Select, full documentation here: http://silviomoreto.github.io/bootstrap-select -->
    <script src="~/Scripts/bootstrap-selectpicker.js"></script>
    <!--  Plugin for the DateTimePicker, full documentation here: https://eonasdan.github.io/bootstrap-datetimepicker/ -->
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <!--  DataTables.net Plugin, full documentation here: https://datatables.net/    -->
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <!--    Plugin for Tags, full documentation here: https://github.com/bootstrap-tagsinput/bootstrap-tagsinputs  -->
    <script src="~/Scripts/bootstrap-tagsinput.js"></script>
    <!-- Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="~/Scripts/jasny-bootstrap.min.js"></script>
    <!--  Full Calendar Plugin, full documentation here: https://github.com/fullcalendar/fullcalendar    -->
    <script src="~/Scripts/fullcalendar.min.js"></script>
    <!-- Vector Map plugin, full documentation here: http://jvectormap.com/documentation/ -->
    <script src="~/Scripts/jquery-jvectormap.js"></script>
    <!--  Plugin for the Bootstrap Table -->
    <script src="~/Scripts/nouislider.min.js"></script>
    <!--  Google Maps Plugin    -->
    @*<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>*@
    <!-- Chart JS -->
    <script src="~/Scripts/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Scripts/paper-dashboard.min.js" type="text/javascript"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/Scripts/demo.js"></script>
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/js/demos.js
            demo.initDashboardPageCharts();


            demo.initVectorMap();

        });
    </script>
</body>

</html>








